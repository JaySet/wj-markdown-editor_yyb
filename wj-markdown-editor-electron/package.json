{
  "author": {
    "name": "魏杰",
    "email": "bxqyher@outlook.com"
  },
  "homepage": "https://github.com/nlbwqmz/wj-markdown-editor",
  "description": "markdown编辑器",
  "name": "wj-markdown-editor",
  "version": "1.4.4",
  "main": "src/main.js",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "start": "cross-env NODE_ENV=dev electron .",
    "static": "electron .",
    "make": "cd ../wj-markdown-editor-web && yarn install && yarn build && cd ../wj-markdown-editor-electron && yarn install && electron-builder",
    "build": "electron-builder"
  },
  "build": {
    "publish": {
      "provider": "generic",
      "url": ""
    },
    "productName": "wj-markdown-editor",
    "directories": {
      "output": "electron-build"
    },
    "files": [
      "!config.json",
      "!img/**",
      "!login_info",
      "!wj-markdown-editor.db"
    ],
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "wj-markdown-editor",
      "menuCategory": "wj-markdown-editor",
      "deleteAppDataOnUninstall": true,
      "createDesktopShortcut": true,
      "installerIcon": "./icon/favicon.ico",
      "uninstallerIcon": "./icon/favicon.ico",
      "installerHeaderIcon": "./icon/favicon.ico",
      "perMachine": true,
      "include": "./installer.nsh"
    },
    "win": {
      "artifactName": "${productName}-${platform}-${arch}-${version}.${ext}",
      "icon": "./icon/favicon.ico",
      "target": [
        {
          "target": "nsis"
        },
        {
          "target": "zip"
        }
      ],
      "fileAssociations": [
        {
          "ext": [
            "md"
          ],
          "name": "Markdown File"
        }
      ]
    },
    "linux": {
      "icon": "./icon",
      "category": "Utility",
      "artifactName": "${productName}-${platform}-${arch}-${version}.${ext}",
      "mimeTypes": [
        "text/markdown"
      ],
      "target": [
        {
          "target": "deb"
        },
        {
          "target": "rpm"
        }
      ],
      "fileAssociations": [
        {
          "ext": [
            "md"
          ],
          "mimeType": "text/markdown",
          "name": "Markdown File"
        }
      ]
    }
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^29.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "croner": "^8.0.1",
    "crypto": "^1.0.1",
    "electron-screenshots": "^0.5.26",
    "electron-updater": "^6.1.8",
    "nanoid": "^5.0.6",
    "node-machine-id": "^1.1.12",
    "sqlite3": "^5.1.7",
    "webdav": "^5.5.0"
  }
}
